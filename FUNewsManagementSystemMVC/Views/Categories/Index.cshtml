@model IEnumerable<BusinessObjects.Entities.Category>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Category List</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Create New</a>
</p>

<!-- Bảng Danh Mục -->
<table class="table table-bordered table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryDesciption)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParentCategory)
            </th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryDesciption)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ParentCategory.CategoryDesciption)
                </td>
                <td class="text-center">
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.CategoryId">Details</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Styles {
    <style>
        /* Tùy chỉnh bảng */
        table {
            width: 100%;
            margin-bottom: 20px;
        }

            table th, table td {
                text-align: center;
                vertical-align: middle;
            }

        /* Tùy chỉnh tiêu đề bảng */
        .thead-dark th {
            background-color: #343a40;
            color: white;
        }

        /* Cải thiện khoảng cách và màu sắc của nút */
        .btn {
            width: 100px;
            margin: 0 5px;
            padding: 10px 15px;
            font-size: 14px;
            border-radius: 5px;
            transition: background-color 0.3s ease, transform 0.3s ease;
        }

        /* Nút Edit */
        .btn-warning {
            background-color: #ffc107;
            border-color: #ffc107;
        }

            .btn-warning:hover {
                background-color: #e0a800;
                border-color: #d39e00;
                transform: translateY(-2px);
            }

        /* Nút Details */
        .btn-info {
            background-color: #17a2b8;
            border-color: #17a2b8;
        }

            .btn-info:hover {
                background-color: #138496;
                border-color: #117a8b;
                transform: translateY(-2px);
            }

        /* Nút Delete */
        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }

            .btn-danger:hover {
                background-color: #c82333;
                border-color: #bd2130;
                transform: translateY(-2px);
            }

        /* Thêm hiệu ứng hover cho các hàng trong bảng */
        tbody tr:hover {
            background-color: #f1f1f1;
            cursor: pointer;
        }

        /* Nút Create New */
        .btn-success {
            margin-bottom: 20px;
        }
    </style>
}

