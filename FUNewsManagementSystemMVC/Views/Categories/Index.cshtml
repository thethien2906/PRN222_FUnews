@model IEnumerable<BusinessObjects.Entities.Category>

@{
    ViewData["Title"] = "Category Management";
}

<h2>Category Management</h2>

<!-- Success and Error Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<!-- Create Category Button -->
<button onclick="openModal('/Categories/Create', 'Create Category')" class="btn btn-primary mb-3">Create New Category</button>

<!-- Category Table -->
<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Category Name</th>
            <th>Description</th>
            <th>Parent Category</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryName</td>
                <td>@item.CategoryDesciption</td>
                <td>@(item.ParentCategory != null ? item.ParentCategory.CategoryName : "None")</td>
                <td>
                        @if (item.IsActive == true)
                        {
                        <span>Active</span>
                        }
                        else
                        {
                        <span>Inactive</span>
                        }
                </td>
                <td>
                    <button onclick="openModal('/Categories/Edit/@item.CategoryId', 'Edit Category')" class="btn btn-warning btn-sm">Edit</button>
                    <a asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Bootstrap Modal -->
<div class="modal fade" id="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle"></h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body" id="modalBody"></div>
        </div>
    </div>
</div>

<!-- JavaScript for Handling Modals -->
<script>
    function openModal(url, title) {
        $("#modalTitle").text(title);
        $("#modalBody").load(url, function () {
            $("#modal").modal("show");
        });
    }
</script>