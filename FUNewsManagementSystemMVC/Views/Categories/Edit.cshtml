@model BusinessObjects.Entities.Category

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">Edit Category</h1>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-6 offset-md-3">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Hidden field for CategoryId -->
            <input type="hidden" asp-for="CategoryId" />

            <!-- Category Name -->
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label">Category Name</label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>

            <!-- Category Description -->
            <div class="form-group">
                <label asp-for="CategoryDesciption" class="control-label">Category Description</label>
                <input asp-for="CategoryDesciption" class="form-control" />
                <span asp-validation-for="CategoryDesciption" class="text-danger"></span>
            </div>

            <!-- Parent Category -->
            <div class="form-group">
                <label asp-for="ParentCategoryId" class="control-label">Parent Category</label>
                <select asp-for="ParentCategoryId" class="form-control" asp-items="ViewBag.ParentCategoryId"></select>
                <span asp-validation-for="ParentCategoryId" class="text-danger"></span>
            </div>

            <!-- Is Active -->
            <div class="form-group">
                <label asp-for="IsActive" class="control-label">Is Active</label>
                <input asp-for="IsActive" class="form-control" />
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="form-group text-center">
                <input type="submit" value="Save" class="btn btn-primary btn-lg" />
            </div>
        </form>
    </div>
</div>

<!-- Link to go back to the list -->
<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary btn-lg">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@section Styles {
    <style>
        /* Tùy chỉnh chung cho form */
        .form-group {
            margin-bottom: 20px;
        }

   
        .form-control {
            font-size: 16px;
            padding: 12px;
            border-radius: 5px;
            border: 1px solid #ccc;
            transition: border-color 0.3s, box-shadow 0.3s;
        }

         
            .form-control:focus {
                border-color: #007bff;
                box-shadow: 0 0 8px rgba(0, 123, 255, 0.5);
            }

        /*  nút Submit */
        .btn-primary {
            padding: 12px 25px;
            font-size: 18px;
            border-radius: 5px;
            transition: background-color 0.3s, transform 0.2s ease;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                transform: translateY(-2px);
            }

        /* Nút Back to List */
        .btn-secondary {
            padding: 12px 25px;
            font-size: 16px;
            border-radius: 5px;
            transition: background-color 0.3s, transform 0.2s ease;
        }

            .btn-secondary:hover {
                background-color: #6c757d;
                transform: translateY(-2px);
            }

      
        .form-group label {
            font-weight: bold;
            margin-bottom: 10px;
            color: #333;
        }

        
        .container {
            max-width: 900px; 
            margin-top: 40px;
        }

        /* Cải thiện khoảng cách giữa các phần tử */
        .row {
            margin-top: 30px;
        }

        .text-center {
            text-align: center;
        }
      
        .text-danger {
            font-size: 14px;
            color: #dc3545;
        }
    </style>
}
