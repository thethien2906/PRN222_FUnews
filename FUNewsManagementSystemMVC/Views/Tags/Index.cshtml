@model IEnumerable<Services.DTOs.TagDTO>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.TagName)</th>
            <th>@Html.DisplayNameFor(model => model.Note)</th>
            <th>News Articles</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.TagName)</td>
                <td>@Html.DisplayFor(modelItem => item.Note)</td>
                @* <td>
                    @if (item.NewsArticles != null && item.NewsArticles.Any())
                    {
                        @string.Join(", ", item.NewsArticles.Select(n => n.NewsTitle))
                    }
                    else
                    {
                        <span>No Articles</span>
                    }
                </td> *@
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TagId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.TagId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.TagId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    /* Tổng quan của trang */


    h4 {
        font-size: 1.75rem;
        color: #495057;
        text-align: center;
        margin-bottom: 20px;
    }

    a {
        color: #007bff;
        font-size: 1.2rem;
        text-decoration: none;
        margin-bottom: 20px;
        display: inline-block;
        transition: color 0.3s ease;
    }

        a:hover {
            color: #0056b3;
            text-decoration: underline;
        }

    
    .table {
        width: 100%;
        margin: 20px 0;
        border-collapse: collapse;
        background-color: #ffffff;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

       
        .table thead {
            background-color: #007bff;
            color: #ffffff;
            font-size: 1.1rem;
            font-weight: 600;
        }

      
        .table tbody tr {
            background-color: #f8f9fa;
            border-bottom: 1px solid #dee2e6;
            transition: background-color 0.3s ease;
        }

            .table tbody tr:hover {
                background-color: #e9ecef;
            }

     
        .table td, .table th {
            padding: 15px;
            text-align: left;
        }

        
        .table a {
            color: #007bff;
            text-decoration: none;
            font-size: 1rem;
            padding: 5px 10px;
            border-radius: 4px;
            transition: all 0.3s ease;
        }

            
            .table a:hover {
                color: #fff;
                background-color: #007bff;
                transform: scale(1.05);
            }

 
        .table td span {
            color: #6c757d;
            font-style: italic;
        }


    .text-danger {
        color: #e74a3b;
    }

</style>