@model Services.DTOs.TagDTO

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Tag</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TagName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TagName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Note)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Note)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.TagId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
<style>
    /* Tổng quan cho trang Details */
    h1 {
        font-size: 2.5rem;
        font-weight: 600;
        color: #343a40;
        text-align: center;
        margin-bottom: 30px;
    }

    h4 {
        font-size: 1.75rem;
        color: #495057;
        text-align: center;
        margin-bottom: 20px;
    }

    hr {
        border: 1px solid #007bff;
        width: 50%;
        margin: 20px auto;
    }

    /* Cải thiện danh sách mô tả (Description List) */
    dl.row {
        margin: 20px 0;
        font-size: 1.1rem;
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    dt {
        font-weight: 500;
        color: #495057;
        padding-right: 10px;
    }

    dd {
        margin-bottom: 15px;
        color: #6c757d;
    }

    dd, dt {
        font-size: 1.1rem;
    }

    /* Cải thiện các liên kết ở dưới */
    a {
        color: #007bff;
        font-size: 1.2rem;
        text-decoration: none;
        margin-top: 20px;
        display: inline-block;
        transition: color 0.3s ease;
    }

        a:hover {
            color: #0056b3;
            text-decoration: underline;
        }

    /* Cải thiện bố cục cho các phần tử */
    div {
        max-width: 800px;
        margin: 0 auto;
    }

 
</style>