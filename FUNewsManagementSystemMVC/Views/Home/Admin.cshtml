@{
    ViewData["Title"] = "Admin Dashboard";
    var userName = Context.Session.GetString("UserName");
}

<!-- Thông tin chào mừng -->
<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title text-center">Welcome @userName</h2>
                    @if (string.IsNullOrEmpty(userName))
                    {
                        <p class="text-danger text-center">Warning: UserName not found in session</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- chức năng -->
<div class="container mt-5">
    <div class="row justify-content-center">
        <!-- Ô Report -->
        <div class="col-md-3 mb-4">
            <div class="card h-100">
                <div class="card-body d-flex flex-column text-center">
                    <h5 class="card-title">Manage NewsArticles</h5>
                    <i class="fas fa-th-large" style="font-size: 50px;"></i>
                    <p class="card-text">Manage News Articles information, including deleting unused news Articles.</p>
                    <div class="mt-auto">
                        <a href="@Url.Action("Report","NewsArticles")" class="btn btn-primary">Go to NewsArticles</a>
                    </div>
                </div>
            </div>
        </div>
        <!-- Ô CRUDAccount -->
        <div class="col-md-3  mb-4">
            <div class="card h-100">
                <div class="card-body d-flex flex-column text-center">
                    <h5 class="card-title">Manage SystemAccounts</h5>
                    <i class="fas fa-users-cog" style="font-size: 50px;"></i>
                    <p class="card-text">Manage all system accounts.</p>
                    <div class="mt-auto">
                        <a href="@Url.Action("Index", "SystemAccounts")" class="btn btn-primary">Go to Accounts</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
    <style>
        .card {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .card-body {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .mt-auto {
            margin-top: auto;
        }
    </style>
}

@section Scripts {
    <script>
        console.log("Admin page loaded");
    </script>
}