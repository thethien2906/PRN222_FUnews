@{
    ViewData["Title"] = "Staff Dashboard";
    var userName = Context.Session.GetString("UserName");
}

<h1>Staff Dashboard</h1>
<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">Welcome @userName</h2>
                    @if (string.IsNullOrEmpty(userName))
                    {
                        <p class="text-danger">Warning: UserName not found in session</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        console.log("Staff page loaded");
    </script>
}