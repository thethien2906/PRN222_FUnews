@model IEnumerable<Services.DTOs.NewsArticleDTO>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div class="container mt-4">
        <h2 class="mb-4">News Articles</h2>
    </div>
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th class="col-title">Title</th>
                <th class="col-headline">Headline</th>
                <th>Published Date</th>
                <th>Content</th>
                <th>Source</th>
                <th class="col-category">Category</th>
                <th class="col-tags">Tags</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <strong>@Html.DisplayFor(modelItem => item.NewsTitle)</strong>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Headline)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedDate)
                    </td>
                    <td>
                        @(item.NewsContent.Length > 50 ? item.NewsContent.Substring(0, 50) + "..." : item.NewsContent)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NewsSource)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryName)
                    </td>
                    <td>
                        @if (item.Tags != null && item.Tags.Any())
                        {
                            @string.Join(", ", item.Tags.Select(tag => tag.TagName))
                        }
                        else
                        {
                            <em>No Tags</em>
                        }
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.NewsArticleId" class="btn btn-sm btn-info">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<style>
    /* Căn giữa cho phần tiêu đề */
    .text-center {
        text-align: center;
        margin-bottom: 30px;
        height: 90vh;
    }

    /* Tùy chỉnh tiêu đề chính */
    h1.display-4 {
        font-size: 3rem;
        font-weight: bold;
        color: #007bff;
        margin-top: 50px;
    }

    h2.mb-4 {
        font-size: 2rem;
        font-weight: 600;
        color: #343a40;
    }

    
    .table {
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        margin-top: 30px;
        width: 100%;
        text-align: center;
    }

       
        .table thead {
            background-color: #343a40;
            color: #fff;
        }

        
        .table td, .table th {
            vertical-align: middle;
            padding: 12px;
        }

        
        .table tbody tr:hover {
            background-color: #f1f1f1;
        }

        /* Cột "Title", "Headline", "Category" - căn trái */
        .table .col-title, .table .col-headline, .table .col-category {
            text-align: left;
            font-weight: bold;
        }

        /* Cột "Tags" */
        .table .col-tags {
            font-style: italic;
            color: #6c757d;
        }

    /* Các nút (Details) */
    .btn-sm {
        padding: 8px 12px;
        font-size: 0.875rem;
        border-radius: 4px;
        transition: all 0.3s ease-in-out;
    }

    /* Nút "Details" */
    .btn-info {
        background-color: #17a2b8;
        border-color: #17a2b8;
        color: white;
    }

        .btn-info:hover {
            background-color: #138496;
            border-color: #138496;
        }

    
    .table a:hover {
        text-decoration: none;
        transform: scale(1.05);
    }
</style>