@model IEnumerable<BusinessObjects.Entities.NewsArticle>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">FUNews</h1>
    <div class="container mt-4">
        <h2 class="mb-4">News Articles</h2>
        </div>
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Title</th>
                    <th>Headline</th>
                    <th>Published Date</th>
                    <th>Content</th>
                    <th>Source</th>
                    <th>Category</th>
					<th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <strong>@Html.DisplayFor(modelItem => item.NewsTitle)</strong>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Headline)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedDate)
                        </td>
                        <td>
                            @(item.NewsContent.Length > 50 ? item.NewsContent.Substring(0, 50) + "..." : item.NewsContent)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NewsSource)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Category.CategoryDesciption)
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.NewsArticleId" class="btn btn-sm btn-info">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
