@model IEnumerable<Services.DTOs.NewsArticleDTO>

@{
    ViewData["Title"] = "News Articles";
}

<div class="container mt-4">
    <h2 class="mb-4">News Articles</h2>

    <div class="d-flex justify-content-between mb-3">
        <a asp-action="Create" class="btn btn-primary">Create New Article</a>
        <div class="mt-auto">
            <a href="@Url.Action("Index", "Tags")" class="btn btn-primary">Tags</a>
        </div>
    </div>

    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Title</th>
                <th>Headline</th>
                <th>Published Date</th>
                <th>Content</th>
                <th>Source</th>
                <th>Status</th>
                <th>Category</th>
				<th>Tags</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <strong>@Html.DisplayFor(modelItem => item.NewsTitle)</strong>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Headline)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedDate)
                    </td>
                    <td>
                        @(item.NewsContent.Length > 50 ? item.NewsContent.Substring(0, 50) + "..." : item.NewsContent)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NewsSource)
                    </td>
                    <td>
                        @if (item.NewsStatus == true)
                        {
                            <span>Active</span>
                        }
                        else
                        {
                            <span>Inactive</span>
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryName)
                    </td>
                    <td>
                        @if (item.Tags != null && item.Tags.Any())
                        {
                            @string.Join(", ", item.Tags.Select(tag => tag.TagName))
                        }
                        else
                        {
                            <em>No Tags</em>
                        }
                    </td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@item.NewsArticleId" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.NewsArticleId" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.NewsArticleId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>