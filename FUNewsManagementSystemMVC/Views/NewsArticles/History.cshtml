@model IEnumerable<BusinessObjects.Entities.NewsArticle>
@{
    ViewData["Title"] = "My Articles";
}
<div class="container mt-4">
    <h2 class="mb-4">My News Articles</h2>
    <div class="d-flex justify-content-between mb-3">
        <div>
            <a asp-action="Create" class="btn btn-primary me-2">Create New Article</a>
            <a asp-action="Index" class="btn btn-secondary">View All Articles</a>

        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            You haven't created any articles yet.
        </div>
    }
    else
    {
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Title</th>
                    <th>Headline</th>
                    <th>Published Date</th>
                    <th>Content</th>
                    <th>Source</th>
                    <th>Status</th>
                    <th>Category</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <strong>@Html.DisplayFor(modelItem => item.NewsTitle)</strong>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Headline)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedDate)
                        </td>
                        <td>
                            @(item.NewsContent.Length > 50 ? item.NewsContent.Substring(0, 50) + "..." : item.NewsContent)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NewsSource)
                        </td>
                        <td>
                            @if (item.NewsStatus == true)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Category.CategoryDesciption)
                        </td>
                        <td>
                            <div class="btn-group">
                                <a asp-action="Edit" asp-route-id="@item.NewsArticleId" class="btn btn-sm btn-warning">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.NewsArticleId" class="btn btn-sm btn-info">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.NewsArticleId" class="btn btn-sm btn-danger">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>