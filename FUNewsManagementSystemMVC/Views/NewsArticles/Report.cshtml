@model List<Services.DTOs.NewsArticleDTO>

@{
    ViewData["Title"] = "News Report";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-warning">@TempData["Message"]</div>
}

<div class="container-fluid px-5" style="width: 100%; font-size: 18px;">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white text-center py-3 rounded-top-4">
            <h2 class="mb-0"><i class="bi bi-file-earmark-bar-graph"></i> News Articles Report</h2>
        </div>

        <div class="card-body p-4">
            <form method="get">
                <div class="row">
                    <div class="col-md-5">
                        <div class="form-group mb-3">
                            <label for="startDate" class="control-label fw-bold">Start Date</label>
                            <input type="date" id="startDate" name="startDate" class="form-control" required value="@ViewData["StartDate"]" />
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group mb-3">
                            <label for="endDate" class="control-label fw-bold">End Date</label>
                            <input type="date" id="endDate" name="endDate" class="form-control" required value="@ViewData["EndDate"]" />
                        </div>
                    </div>
                    <div class="col-md-2 d-flex align-items-center justify-content-center mt-3">
                        <button type="submit" class="btn btn-primary w-100"><i class="bi bi-search"></i> Generate Report</button>
                    </div>
                </div>
            </form>

            @if (!string.IsNullOrEmpty(ViewData["Message"] as string))
            {
                <p class="text-danger mt-3">@ViewData["Message"]</p>
            }

            @if (Model != null && Model.Any())
            {
                <table class="table mt-4 table-striped table-bordered w-100 align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Title</th>
                            <th>Headline</th>
                            <th>Created Date</th>
                            <th>Source</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var article in Model.OrderByDescending(a => a.CreatedDate))
                        {
                            <tr>
                                <td>@article.NewsTitle</td>
                                <td>@article.Headline</td>
                                <td>@article.CreatedDate?.ToString("yyyy-MM-dd")</td>
                                <td>@article.NewsSource</td>
                                <td>
                                    @if (article.NewsStatus.GetValueOrDefault())
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="mt-3 text-muted">No articles found for the selected period.</p>
            }
        </div>
    </div>
</div>