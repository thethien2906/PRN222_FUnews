@model IEnumerable<BusinessObjects.Entities.NewsArticle>

<h2>News Articles Report</h2>

<form method="get">
    <label>Start Date:</label>
    <input type="date" name="startDate" required />
    <label>End Date:</label>
    <input type="date" name="endDate" required />
    <button type="submit">Create Report</button>
</form>

@if (ViewData["Message"] != null)
{
    <p style="color: red;">@ViewData["Message"]</p>
}

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Category</th>
                <th>Tags</th>
                <th>Status</th>
                <th>Content</th>
                <th>Created By</th>
                <th>Created Date</th>
                <th>Modified Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var article in Model)
            {
                <tr>
                    <td>@article.NewsTitle</td>
                    <td>@article.Category?.CategoryName</td>
                    <td>@string.Join(", ", article.Tags.Select(t => t.TagName))</td>
                    <td>@(article.NewsStatus == true ? "Published" : "Draft")</td>
                    <td>@article.NewsContent</td>
                    <td>@article.CreatedBy?.AccountName</td>
                    <td>@article.CreatedDate?.ToString("yyyy-MM-dd")</td>
                    <td>@article.ModifiedDate?.ToString("yyyy-MM-dd")</td>
                </tr>
            }
        </tbody>
    </table>
}
