@model Services.DTOs.NewsArticleDTO;

@{
    ViewData["Title"] = "Edit";
}

<h4> Edit NewsArticle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="NewsArticleId" />
            <div class="form-group">
                <label asp-for="NewsTitle" class="control-label"></label>
                <input asp-for="NewsTitle" class="form-control" />
                <span asp-validation-for="NewsTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Headline" class="control-label"></label>
                <input asp-for="Headline" class="form-control" />
                <span asp-validation-for="Headline" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewsContent" class="control-label"></label>
                <input asp-for="NewsContent" class="form-control" />
                <span asp-validation-for="NewsContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewsSource" class="control-label"></label>
                <input asp-for="NewsSource" class="form-control" />
                <span asp-validation-for="NewsSource" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TagIds" class="control-label">Tags</label>
                <select asp-for="TagIds" class="form-control" asp-items="ViewBag.Tags" multiple="multiple"></select>
            </div>

            <div class="form-group">
                <label asp-for="NewsStatus" class="control-label"></label>
                <select asp-for="NewsStatus" class="form-control">
                    <option value="true">Active</option>
                    <option value="false">Inactive</option>
                </select>
                <span asp-validation-for="NewsStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<style>
    /* Tổng quan form */
    h1, h4 {
        font-weight: 600;
        color: #343a40;
        text-align: center;
        margin-bottom: 20px;
    }

    h1 {
        font-size: 2.5rem;
        color: #007bff;
        margin-top: 40px;
    }

    h4 {
        font-size: 1.5rem;
        color: #495057;
        margin-bottom: 30px;
    }

    /* Cải thiện bố cục form */
    .row {
        justify-content: center;
    }

    .form-group {
        margin-bottom: 20px;
        display: flex;
        flex-direction: column;
    }

    /* Label */
    .control-label {
        font-size: 1rem;
        font-weight: 500;
        color: #495057;
        margin-bottom: 5px;
    }

    /* Input, Textarea, Select - Cải tiến bo góc và bóng đổ */
    .form-control {
        padding: 12px;
        font-size: 1rem;
        border-radius: 8px;
        border: 1px solid #ced4da;
        transition: all 0.3s ease-in-out;
        background-color: #f8f9fa;
    }

        /* Hiệu ứng focus khi người dùng click vào input */
        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 8px rgba(0, 123, 255, 0.25);
            outline: none;
        }

    /* Cải tiến textarea */
    textarea.form-control {
        resize: vertical;
        min-height: 150px;
    }

    /* Hiệu ứng hover cho Select */
    select.form-control {
        padding: 12px;
        border-radius: 8px;
        border: 1px solid #ced4da;
        transition: border-color 0.3s ease-in-out;
        background-color: #f8f9fa;
    }

        select.form-control:hover {
            border-color: #007bff;
        }

    /* Hiệu ứng cho các trường select nhiều lựa chọn (Tags) */
    select[multiple] {
        min-height: 120px;
    }

    /* Thêm hiệu ứng cho các lỗi validation */
    .text-danger {
        font-size: 0.9rem;
        color: #e74a3b;
        margin-top: 5px;
    }

    /* Nút Submit - Cải tiến đẹp hơn */
    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        color: white;
        padding: 12px 30px;
        font-size: 1.1rem;
        border-radius: 30px;
        width: 100%;
        transition: all 0.3s ease-in-out;
        cursor: pointer;
        margin-top: 30px;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
            transform: scale(1.05);
        }

    /* Đường link "Back to List" */
    a {
        display: inline-block;
        margin-top: 20px;
        color: #007bff;
        font-size: 1.1rem;
        text-decoration: none;
        transition: color 0.3s ease;
    }

        a:hover {
            color: #0056b3;
            text-decoration: underline;
        }

   
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
