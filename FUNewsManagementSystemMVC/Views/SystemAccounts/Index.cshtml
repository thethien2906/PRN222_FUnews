@model IEnumerable<Services.DTOs.SystemAccountDTO>

@{
    ViewData["Title"] = "System Accounts";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary"><i class="fas fa-users"></i> System Accounts</h2>
        <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus"></i> Create New</a>
    </div>

    <div class="card shadow-lg">
        <div class="card-body">
            @if (Model == null || !Model.Any())
            {
                <p class="text-muted">No accounts found.</p>
            }
            else
            {
                <table class="table table-hover table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.First().AccountName)</th>
                            <th>@Html.DisplayNameFor(model => model.First().AccountEmail)</th>
                            <th>@Html.DisplayNameFor(model => model.First().AccountRole)</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.AccountName)</td>
                                <td>@Html.DisplayFor(modelItem => item.AccountEmail)</td>
                                <td>@Html.DisplayFor(modelItem => item.AccountRole)</td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.AccountId" class="btn btn-sm btn-info"><i class="fas fa-edit"></i> Edit</a>
                                    <a asp-action="Details" asp-route-id="@item.AccountId" class="btn btn-sm btn-secondary"><i class="fas fa-eye"></i> Details</a>
                                    <a asp-action="Delete" asp-route-id="@item.AccountId" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i> Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWYX6jfAUwVkr/AEsXZRLkODzdhNoPnTERNU4L4S5OU7hqD8Nmf+uO/eBUmBqsuFtE8+yw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
}