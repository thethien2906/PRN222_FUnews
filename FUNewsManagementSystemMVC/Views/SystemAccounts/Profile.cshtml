@model BusinessObjects.Entities.SystemAccount

@{
    ViewData["Title"] = "Profile";
}

<style>
    /* Đặt màu nền cho toàn bộ trang */
    .profile-body {
        font-family: Arial, sans-serif;
        background-color: #f4f7fa;
        padding: 20px;
    }

    /* Tiêu đề chính */
    .profile-header {
        text-align: center;
        color: #333;
        margin-bottom: 20px;
    }

    /* Định dạng phần chi tiết tài khoản */
    .profile-container {
        background-color: #fff;
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        max-width: 600px;
        margin: 0 auto;
    }

    /* Định dạng cho phần thông tin chi tiết */
    .profile-details h3 {
        font-size: 24px;
        color: #0056b3;
        margin-bottom: 15px;
    }

    .profile-details p {
        font-size: 16px;
        line-height: 1.6;
        margin-bottom: 10px;
    }

    /* Làm nổi bật tên và giá trị */
    .profile-details strong {
        color: #333;
        font-weight: bold;
    }

    .profile-details p strong {
        color: #007bff;
    }

    /* Thêm một chút khoảng cách dưới cùng */
    .profile-container {
        margin-bottom: 40px;
    }

    /* Định dạng cho link Edit */
    .edit-link {
        display: inline-block;
        padding: 10px 20px;
        margin-top: 20px;
        background-color: #007bff;
        color: white;
        text-decoration: none;
        font-size: 16px;
        border-radius: 5px;
        text-align: center;
    }

        .edit-link:hover {
            background-color: #0056b3;
        }
</style>

<div class="profile-body">
    <h1 class="profile-header">Profile of Staff</h1>

    <div class="profile-container">
        <div class="profile-details">
            <h3>Account Details</h3>
            <p><strong>Name:</strong> @Model.AccountName</p>
            <p><strong>Email:</strong> @Model.AccountEmail</p>
            <p><strong>Password:</strong> @Model.AccountPassword</p>

            <!-- Phần này đang bị lỗi,  -->
            @* <a class="edit-link" href="@Url.Action("EditProfile", "SystemAccounts")">Edit Profile</a> *@
        </div>
    </div>
</div>
