@model BusinessObjects.Entities.SystemAccount

@{
    ViewData["Title"] = "Edit Account";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-warning text-white text-center">
                    <h3>Edit Account</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <input type="hidden" asp-for="AccountId" />

                        <div class="mb-3">
                            <label asp-for="AccountName" class="form-label fw-bold"></label>
                            <input asp-for="AccountName" class="form-control" placeholder="Enter account name" />
                            <span asp-validation-for="AccountName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="AccountEmail" class="form-label fw-bold"></label>
                            <input asp-for="AccountEmail" type="email" class="form-control" placeholder="Enter email" />
                            <span asp-validation-for="AccountEmail" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="AccountRole" class="form-label fw-bold"></label>
                            <select asp-for="AccountRole" class="form-select">
                                <option value="Admin">Admin</option>
                                <option value="Staff">Staff</option>
                                <option value="User">User</option>
                            </select>
                            <span asp-validation-for="AccountRole" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="AccountPassword" class="form-label fw-bold"></label>
                            <input asp-for="AccountPassword" type="password" class="form-control" placeholder="Enter new password" />
                            <span asp-validation-for="AccountPassword" class="text-danger"></span>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Save Changes
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        console.log("Edit account page loaded");
    </script>
}
