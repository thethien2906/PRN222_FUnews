@model BusinessObjects.Entities.SystemAccount

@{
    ViewData["Title"] = "Create Account";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h3>Create New Account</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="AccountName" class="fw-bold"></label>
                            <input asp-for="AccountName" class="form-control" placeholder="Enter full name" />
                            <span asp-validation-for="AccountName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="AccountEmail" class="fw-bold"></label>
                            <input asp-for="AccountEmail" class="form-control" placeholder="Enter email address" />
                            <span asp-validation-for="AccountEmail" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="AccountRole" class="fw-bold"></label>
                            <select asp-for="AccountRole" class="form-control">
                                <option value="" disabled selected>-- Select Role --</option>
                                <option value="1">Lecturer</option>
                                <option value="2">Staff</option>
                            </select>
                            <span asp-validation-for="AccountRole" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="AccountPassword" class="fw-bold"></label>
                            <input asp-for="AccountPassword" type="password" class="form-control" placeholder="Enter password" />
                            <span asp-validation-for="AccountPassword" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-user-plus"></i> Create Account
                            </button>
                        </div>
                    </form>
                </div>

                <div class="card-footer text-center">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
