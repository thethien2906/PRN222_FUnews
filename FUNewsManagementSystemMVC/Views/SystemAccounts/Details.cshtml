@model Services.DTOs.SystemAccountDTO

@{
    ViewData["Title"] = "Account Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h3>Account Details</h3>
                </div>
                <div class="card-body">
                    @if (Model == null)
                    {
                        <p class="text-muted">No account details found.</p>
                    }
                    else
                    {
                        <dl class="row">
                            <dt class="col-sm-4 text-muted">
                                @Html.DisplayNameFor(model => model.AccountName)
                            </dt>
                            <dd class="col-sm-8">
                                <strong>@Html.DisplayFor(model => model.AccountName)</strong>
                            </dd>

                            <dt class="col-sm-4 text-muted">
                                @Html.DisplayNameFor(model => model.AccountEmail)
                            </dt>
                            <dd class="col-sm-8">
                                <span class="text-primary">@Html.DisplayFor(model => model.AccountEmail)</span>
                            </dd>

                            <dt class="col-sm-4 text-muted">
                                @Html.DisplayNameFor(model => model.AccountRole)
                            </dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-success">@Html.DisplayFor(model => model.AccountRole)</span>
                            </dd>

                            <dt class="col-sm-4 text-muted">
                                @Html.DisplayNameFor(model => model.AccountPassword)
                            </dt>
                            <dd class="col-sm-8">
                                <span class="text-muted">••••••••</span> <!-- Ẩn mật khẩu an toàn hơn -->
                            </dd>
                        </dl>
                    }
                </div>
                <div class="card-footer text-center">
                    @if (Model != null)
                    {
                        <a asp-action="Edit" asp-route-id="@Model.AccountId" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    }
                    else
                    {
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-p9O+08hQdZVnyUcDjNSZc7qB9jkm8p+wkZ9ZbVoXMOh+2ONSLnZYVXdXNc3Y8XYoO6SFt5mONOf+rmDteDyrGg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
}

