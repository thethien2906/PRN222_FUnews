@model BusinessObjects.Entities.SystemAccount

@{
    ViewData["Title"] = "Delete Account";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-danger">
                <div class="card-header bg-danger text-white text-center">
                    <h3>Confirm Delete</h3>
                </div>
                <div class="card-body text-center">
                    <p class="text-danger fw-bold">Are you sure you want to delete this account?</p>
                    <hr />

                    <dl class="row text-start">
                        <dt class="col-sm-4 text-muted">
                            @Html.DisplayNameFor(model => model.AccountName)
                        </dt>
                        <dd class="col-sm-8">
                            <strong>@Html.DisplayFor(model => model.AccountName)</strong>
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            @Html.DisplayNameFor(model => model.AccountEmail)
                        </dt>
                        <dd class="col-sm-8">
                            <span class="text-primary">@Html.DisplayFor(model => model.AccountEmail)</span>
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            @Html.DisplayNameFor(model => model.AccountRole)
                        </dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-success">@Html.DisplayFor(model => model.AccountRole)</span>
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            @Html.DisplayNameFor(model => model.AccountPassword)
                        </dt>
                        <dd class="col-sm-8">
                            <span class="text-danger">••••••••</span> <!-- Ẩn mật khẩu -->
                        </dd>
                    </dl>
                </div>

                <div class="card-footer text-center">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="AccountId" />
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash-alt"></i> Delete
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Cancel
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
}

@section Scripts {
